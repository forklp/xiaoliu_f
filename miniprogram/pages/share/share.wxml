<!--pages/share/share.wxml-->
<view class="page">
  <block wx:for="{{countries}}" wx:for-item="country" wx:key="countryName">
    <view class="weui-cell weui-cell_access">
        <view class="weui-cell_hd">
          <image src="../../images/{{country.countryShortName}}Icon.png" mode="widthFix" style="width:40rpx;"/>
        </view>
        <view class="weui-cell__bd">{{country.countryName}}</view>
        <view class="weui-cell__ft weui-cell__ft_in-access" style="font-size: 0">
            <view style="display: inline-block;vertical-align:middle; font-size: 17px;">详细信息</view>
        </view>
    </view>
  </block>
</view>
